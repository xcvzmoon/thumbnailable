{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "experimentalSortPackageJson": false,
  "experimentalSortImports": {
    "groups": [
      ["external-type", "internal-type", "parent-type", "sibling-type", "index-type"],
      ["side-effect"],
      ["builtin"],
      ["external"],
      ["internal"],
      ["parent"],
      ["sibling"],
      ["index"]
    ],
    "newlinesBetween": false
  },
  "singleQuote": true,
  "ignorePatterns": [
    "node_modules",
    "dist",
    "bun.lock",
    "CHANGELOG.md",
    ".DS_Store",
    ".env*",
    ".vscode",
    ".cursor"
  ]
}
